{
  "name": "News Bias Detector",
  "description": "Detect bias on news articles",
  "version": "0.0.1",
  "manifest_version": 3,
  "action": {
    "default_icon": {
      "128": "logo128.png"
    },
    "default_title": "Open the popup"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_end",
      "js": [
        "./index.global.js"
      ],
      "css": [
        "./style.css"
      ]
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "./background.global.js"
  },
  "icons": {
    "128": "logo128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "models/ort-wasm-simd-threaded.mjs",
        "models/ort-wasm-simd-threaded.wasm",
        "models/tinybert/tinybert_mpds2024a_finetuned.onnx",
        "models/tinybert/quantized_bert-base-cased_default_tokenizer.json",
        "models/tinybert/quantized_bert-base-cased_default_tokenizer_config.json"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
